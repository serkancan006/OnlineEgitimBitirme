@model List<ListCourseDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Header Start -->
<div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom" style="margin-bottom: 90px;">
    <div class="container text-center py-5">
        <h1 class="text-white display-1">Kurslar</h1>
        <div class="d-inline-flex text-white mb-5">
            <p class="m-0 text-uppercase"><a class="text-white" href="">Ana Sayfa</a></p>
            <i class="fa fa-angle-double-right pt-1 px-3"></i>
            <p class="m-0 text-uppercase">Kurslar</p>
        </div>
        <div class="mx-auto mb-5" style="width: 100%; max-width: 600px;">
        @await Component.InvokeAsync("_SearchInput")
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Courses Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row mx-0 justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center position-relative mb-5">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Kurslarımız</h6>
                    <h1 class="display-4">Kurslarımıza Göz Atın</h1>
                </div>
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 pb-4">
                    <a class="courses-list-item position-relative d-block overflow-hidden mb-2" href="/Course/CourseDetails/@item.Id">
                        <img class="img-fluid" src="~/online-education/img/courses-1.jpg" alt="">
                        <div class="courses-text">
                            <h4 class="text-center text-white px-3">
                                @item.Title
                            </h4>
                            <div class="border-top w-100 mt-3">
                                <div class="d-flex justify-content-between p-3">
                                    <span class="text-white" style="font-size: small">@item.Level.ToUpper() SEVİYE</span>
                                    <span class="text-white" style="font-size: small"><i class="fa fa-star mr-1"></i>@item.CoursePuan</span>
                                </div>
                                <div class="d-flex justify-content-between p-3" >
                                    <span class="text-white" style="font-size: small">@item.Language.ToUpper() </span>
                                    <span class="text-white" style="font-size: small">@item.Price₺</span>
                                </div>
                            </div>
                        </div>
                    </a>
                    <a class="btn btn-success">Sepete Ekle</a>
                </div>
            }

            <!-- Pagination -->
            <div class="col-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-lg justify-content-center mb-0">
                        <li class="page-item">
                            <a class="page-link rounded-0" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link rounded-0" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <!-- Pagination -->
        </div>
    </div>
</div>
<!-- Courses End -->
