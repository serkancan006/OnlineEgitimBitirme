<!-- Tarayıcıda çerezlerden alınan verileri yerel depolama alanına eklemek  -->
<script>
    document.cookie.split(';').forEach(function (cookie) {
        var parts = cookie.split('=');
        var key = parts[0].trim();
        var value = parts[1];

        if (key === 'Token' || key === 'TokenExpires') {
            localStorage.setItem(key, value);
        }
    });
</script>
