@model UpdateAboutDto
@{
    ViewData["Title"] = "AdminUpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="Id" />

        <label>Hakkımızda Resim 1</label>
