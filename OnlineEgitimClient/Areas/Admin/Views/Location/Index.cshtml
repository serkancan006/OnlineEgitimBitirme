@model List<ListLocationDto>
@{
    ViewData["Title"] = "AdminIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Lokasyon Bilgisi</th>
            <th>Oluşturulma tarihi</th>
            <th>Güncellenme Tarihi</th>
            <th>Durumu</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Address</td>
                <td>@(((DateTime)item.CreatedDate).ToString("dd-MMM-yyyy"))</td>
                <td>@(((DateTime)item.UpdatedDate).ToString("dd-MMM-yyyy"))</td>
                <td>@item.Status</td>
                <td><a href="/Admin/Location/DeleteLocation/@item.Id" class="btn mb-1 btn-rounded btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz');">Sil</a></td>
                <td><a href="/Admin/Location/UpdateLocation/@item.Id" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </table>
</div>
<br />
<a href="/Admin/Location/AddLocation/" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Lokasyon Oluştur</a>

