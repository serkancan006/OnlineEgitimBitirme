@model List<ListCourseVideoDto>
@{
    ViewData["Title"] = "CourseVideos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1>Course Videos</h1>
    <div class="table-responsive">
        <table id="videoTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>File Name</th>
                    <th>File Path</th>
                    <th>File Display Name</th>
                    <th>Course ID</th>
                    <th>Created Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var video in Model)
                {
                    <tr>
                        <td>@video.id</td>
                        <td>@video.fileName</td>
                        <td>@video.filePath</td>
                        <td>@video.fileDisplayName</td>
                        <td>@video.courseID</td>
                        <td>@video.createdDate</td>
                        <td>@(video.status ? "Active" : "Inactive")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

