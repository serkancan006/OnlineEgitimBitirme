@model UpdateCourseDto

@{
    ViewData["Title"] = "AdminUpdateCourse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="Id" />

        <label>Kurs Başlık</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />

        <label>Kurs Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />

        <label>Kurs Fiyat</label>
        <input type="number" step="0.01" asp-for="Price" class="form-control" />
        <br />

        <div class="row">
            <div class="col-md-6">
                <label for="timeInput">Kurs Süre</label>
                <input type="time" class="form-control" id="timeInput" asp-for="Duration">
            </div>
        </div>

        <label>Kurs Resmi</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />

        <label>Kurs Konu sayısı</label>
        <input type="number" asp-for="SubjectCount" class="form-control" />
        <br />

        <label>Kurs Seviyesi</label>
        <select class="form-control" asp-for="Level">
            <option value="temel">Temel Seviye</option>
            <option value="orta">Orta Seviye</option>
            <option value="ileri">İleri Seviye</option>
        </select>
        <br />

        <label>Kurs Dili</label>
        <select class="form-control" asp-for="Language">
            <option value="turkish">Türkçe</option>
            <option value="english">İngilizce</option>
        </select>
        <br />

        <label>Kurs Like</label>
        <input type="number" asp-for="CourseLike" class="form-control" />
        <br />

        <label>Kurs Dislike</label>
        <input type="number" asp-for="CourseDisLike" class="form-control" />
        <br />

        <label>Kurs Puanı</label>
        <input type="number" step="0.1" asp-for="CoursePuan" class="form-control" />
        <br />

        <label>Kurs Görüntülenme</label>
        <input type="number" asp-for="CourseViewCountLog" class="form-control" />
        <br />

        <label>Durumu</label>
        <select asp-for="Status" class="form-control">
            <option value="true">True</option>
            <option value="false">False</option>
        </select>
        <br />

        <button class="btn btn-primary">Kurs Güncelle</button>
    </form>
</div>
