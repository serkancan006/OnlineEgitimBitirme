@model List<ListCourseVideoDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Instructor/Views/Shared/_InstructorLayout.cshtml";
}

<div class="container">
    <div class="row">
        @foreach (var video in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card ">
                    @*<img src="@video.filePath" class="card-img-top" alt="@video.fileName">*@
                    <video width="100%" height="100%" controls>
                        <source id="videoPlayer" src="@video.filePath">
                    </video>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@video.fileDisplayName</h5>
                        <p class="card-text">
                            <strong>ID:</strong> @video.id <br>
                            <strong>Kurs ID:</strong> @video.courseID <br>
                            <strong>Oluşturma Tarihi:</strong> @video.createdDate.ToString("dd-MMM-yyyy") <br>
                            <strong>Durum:</strong> @(video.status ? "Active" : "Inactive") <br>
                        </p>
                        <a href="/Instructor/CourseVideoFile/DeleteCourseVideo/@video.id?courseId=@video.courseID" class="btn btn-danger">Sil</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
